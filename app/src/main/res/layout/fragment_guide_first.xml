<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_guide_first"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:id="@+id/guide_item_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_guide_first_01" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_xxxlarge">

        <ImageView
            android:id="@+id/guide_item_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/margin_xlarge"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:src="@drawable/ic_guide_first_02" />

        <ImageView
            android:id="@+id/guide_item_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/guide_item_2"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:src="@drawable/ic_guide_first_08" />

        <ImageView
            android:id="@+id/guide_item_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/guide_item_8"
            android:layout_marginLeft="@dimen/margin_xxxlarge"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:src="@drawable/ic_guide_first_09" />

        <ImageView
            android:id="@+id/guide_item_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/margin_xlarge"
            android:layout_toRightOf="@+id/guide_item_2"
            android:src="@drawable/ic_guide_first_07" />

        <ImageView
            android:id="@+id/guide_item_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/guide_item_7"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_xxxlarge"
            android:layout_toRightOf="@+id/guide_item_2"
            android:src="@drawable/ic_guide_first_05" />

        <ImageView
            android:id="@+id/guide_item_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/guide_item_5"
            android:layout_marginLeft="@dimen/margin_xlarge"
            android:layout_marginTop="@dimen/margin_xxlarge"
            android:layout_toRightOf="@+id/guide_item_9"
            android:src="@drawable/ic_guide_first_11" />

        <ImageView
            android:id="@+id/guide_item_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/margin_xxxlarge"
            android:layout_toRightOf="@+id/guide_item_7"
            android:src="@drawable/ic_guide_first_06" />

        <ImageView
            android:id="@+id/guide_item_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/guide_item_6"
            android:layout_marginLeft="@dimen/margin_xlarge"
            android:layout_marginTop="@dimen/margin_xxlarge"
            android:layout_toRightOf="@+id/guide_item_5"
            android:src="@drawable/ic_guide_first_04" />

        <ImageView
            android:id="@+id/guide_item_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/guide_item_4"
            android:layout_marginLeft="@dimen/margin_xlarge"
            android:layout_marginTop="@dimen/margin_xxlarge"
            android:layout_toRightOf="@+id/guide_item_5"
            android:src="@drawable/ic_guide_first_13" />

        <ImageView
            android:id="@+id/guide_item_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/guide_item_6"
            android:layout_marginLeft="@dimen/margin_xlarge"
            android:layout_toRightOf="@+id/guide_item_4"
            android:src="@drawable/ic_guide_first_03" />

        <ImageView
            android:id="@+id/guide_item_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/guide_item_3"
            android:layout_marginLeft="@dimen/margin_xlarge"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:layout_toRightOf="@+id/guide_item_4"
            android:src="@drawable/ic_guide_first_12" />

        <ImageView
            android:id="@+id/guide_item_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/guide_item_12"
            android:layout_marginLeft="@dimen/margin_xxxlarge"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:layout_toRightOf="@+id/guide_item_11"
            android:src="@drawable/ic_guide_first_10" />
    </RelativeLayout>
</LinearLayout>